#include <bits/stdc++.h>
using namespace std;
string c;
int main()
{
    int n=0;
    cin>>n;
    for(int i=0;i<n;i++){
        int left=0,right=0,total=0;
        cin>>c;
        for(int j=0;j<c.length();j++){
            if(c[j]=='('){
                left++;
               }
            if(c[j]==')'){
                if(left==0){
                    cout<<0<<endl;
                    break;
                }
                left--;
                total++;

               }
               if(j==c.length()-1&&left==0){
                    cout<<total<<endl;
               }else if(j==c.length()-1&&left>0){
                    cout<<0<<endl;
               }

        }
    }
    return 0;
}
